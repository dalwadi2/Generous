<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profilePic_fragmentProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/upload"
            app:border_color="#ccc"
            app:border_width="1dp" />


        <EditText
            android:id="@+id/et_fname_fragmentProfile"
            style="@style/MyAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/ractangle_border"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:hint="First Name"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_name_fragmentProfile"
            style="@style/MyAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/ractangle_border"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:hint="Name"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_email_fragmentProfile"
            style="@style/MyAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/ractangle_border"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:hint="Email"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_password_fragmentProfile"
            style="@style/MyAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/ractangle_border"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:textColor="@color/dark_gray"
            android:textColorHint="@color/dark_gray"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_update_fragmentProfile"
            style="@style/MyAppTheme"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttonshape_blue"
            android:text="Update"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>