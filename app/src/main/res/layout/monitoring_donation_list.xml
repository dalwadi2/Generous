<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_donor_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_donorName_donorList"
            style="@style/MyAppTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Holding GT"
            android:textColor="#3C3C3C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_dateDonor_donorList"
            style="@style/MyAppTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="28/05/2016"
            android:textColor="#3C3C3C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_ammount_donorList"
            style="@style/MyAppTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="\u0024251"
            android:textColor="#3C3C3C"
            android:textSize="12sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>